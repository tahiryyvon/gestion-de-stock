{
  "name": "gestion-stock-caisse",
  "version": "1.0.0",
  "description": "Logiciel de Gestion de Stock & Caisse (Web + Desktop)",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/web",
    "build": "npm run build --workspace=packages/web",
    "build:desktop": "npm run build --workspace=packages/desktop",
    "start": "npm run start --workspace=packages/web",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "db:migrate": "npm run db:migrate --workspace=packages/web",
    "db:seed": "npm run db:seed --workspace=packages/web"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "turbo": "^1.10.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}